section{
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100vh;
	width: 100vw;
}
button{
	border: none;
	background-color: var(--node);
	margin: 2px;
	width: 29vw;
	height: 5vh;
	transition: 0.2s;
}

button:hover{
	background-color: var(--dark-node);
}
.question-box{
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	width: 30vw;
	height: 70vh;
	border: 1px solid var(--node);
}

.question-content{
	margin-top: 4vh;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
